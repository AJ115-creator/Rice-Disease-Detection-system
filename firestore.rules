rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // PREDICTIONS COLLECTION - User's own data
    // ============================================
    match /predictions/{predictionId} {
      // Users can only read their own predictions
      allow read: if request.auth != null 
                  && (resource == null || resource.data.userId == request.auth.uid);
      
      // Users can only create their own predictions
      allow create: if request.auth != null 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['type', 'result', 'timestamp', 'userId']);
      
      // Users can update/delete only their own predictions
      allow update, delete: if request.auth != null 
                            && resource.data.userId == request.auth.uid;
    }
    
    // ============================================
    // USER PROFILES (if you add this later)
    // ============================================
    match /users/{userId} {
      // Users can only read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================
    // DENY ALL OTHER ACCESS
    // ============================================
    match /{document=**} {
      allow read, write: if false;  // Deny everything else
    }
  }
}

